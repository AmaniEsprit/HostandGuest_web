{% extends "FullLayout.html.twig" %}
{% block content %}


<div class="blog-banner">
    <img src="{{ asset('templates/120.72.91.53/themeforest/event_planning/images/banner-img/blog-bannerImg.jpg') }}" alt="">

    <div class="text">
        <h1>Our <span>Blogs</span></h1>
    </div>
</div>
{% for Experience in Experience %}
    <section class="content">
        <div class="container">
            <div class="blog-page">
                <div class="row">
                    <div class="col-sm-8 col-md-9 col-lg-9">
                        <div class="blog-slide">
                            <div class="date-view">
                                <div class="date">{{ Experience.date_publication |date("m/d/Y") }} </div>

                            </div>
                             <BR>
                            <div class="blog-info">
                                <h2><div>{{ Experience.user ? Experience.user.username }}</div></h2>
                                <div class="sub-title"><div>{{Experience.titre }}</div></div>
                                <div class="img"><img src="{{ asset('templates/120.72.91.53/themeforest/event_planning/images/')}}{{ Experience.titre }}" alt="ajout" style="width: 500px; height: 450px"></div>

                                <div class="outher-link">
                                    <ul>
                                        <li><a href="#"><span class="icon icon-calander-check"></span>Jan 2015</a></li>
                                        <li><a href="#"><span class="icon icon-user"></span>John Doe</a></li>
                                        <li><a href="#"><span class="icon icon-comment"></span>0 Comment</a></li>
                                    </ul>
                                </div>
                                <p>{{ Experience.statut }} </p>
                                <a href="{{ path('blog_details_page') }}" class="btn">Plus d'infos</a>
                                <a  href="{{ path('blogdelete',{'ID':Experience.ID})}}" class="btn">supprimer</a>
                                <a  href="{{ path('blogupdate',{'ID':Experience.ID})}}" class="btn">Modifier</a>
                            </div>
                        </div>
    {{ socialButtons( { 'facebook': {'locale':'fr_FR', 'send':true}} ) }}
                        {% endfor %}


                    </div>
                </div>
            </div>
        </div>
    </section>







{% endblock %}
